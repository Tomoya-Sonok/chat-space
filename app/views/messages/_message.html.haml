.chat-main__message-list__a-message
  .chat-main__message-list__a-message__user-info
    .chat-main__message-list__a-message__user-info__user-name
      = message.user.name
    .chat-main__message-list__a-message__user-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__a-message__message
    - if message.content.present?
      %p.chat-main__message-list__a-message__message__content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__a-message__message__image' if message.image.present?